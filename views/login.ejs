<%- include("./includes/head.ejs") %>

<body>
  <div class="login">
    <div class="login__container">
      <div class="login__container__grid">
        <div class="login__container__grid__element">
          <h1 class="login__container__grid__element__header">
            Login to view Website's Activity
          </h1>
        </div>
        <div class="login__container__grid__element">
          <div class="login__form">
            <form action="/log" method="post" class="form">
              <input
                class="input"
                type="tetx"
                name="user"
                placeholder="Username"
                autocomplete="off"
                required
              />
              <input
                class="input"
                type="password"
                name="password"
                placeholder="Password"
                autocomplete="off"
                required
              />
              <input type="submit" name="Login" id="submit" />
            </form>
          </div>
          <%if(locals.data =='no' ){%>
          <p class="error">Invalid Login Data</p>
          <%}%>
        </div>
      </div>
    </div>
  </div>

  <footer id="footer">
    <div class="footer__container">
      <div class="footer__container__grid">
        <div class="footer__container__grid__element">
          <div class="footer__container__grid__element__content">
            <div class="footer__container__grid__element__content__header">
              <h1 class="header">Technology Used</h1>
            </div>
            <div class="footer__container__grid__element__content__list">
              <ul class="list">
                <li class="list__item">Frontend:- HTML and CSS</li>
                <li class="list__item">Backend:- Node.js</li>
                <li class="list__item">
                  Deployed in:- Cpanel / Cloudflare for protection
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="footer__container__grid__element">
          <div class="copyright">
            <p class="copy">
              &copy; Raj chaulagain <span class="date"></span> (aka. Solo Linux)
            </p>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <%- include("./includes/end.ejs")%>
</body>
